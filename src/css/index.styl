@import ("../../libs/template/reset.css")
@import ("../../libs/template/lib")
@import ("../../libs/template/media")

@import ("libs/*.css")
@import ("fonts")
@import ("blocks/**/**")

*
	box-sizing border-box

html
	min-height 100%
	// background: cBlack

body
	position relative
	overflow-x: hidden
	min-width 320px
	background: cWhite
	height 100%
	font-family: mpr
	font-size 14px
	&.overflow
		overflow hidden

#overlayer
	width 100%
	height 100%
	position fixed
	top 0
	left 0
	z-index 11
	background cBlack

.align-right
	float right
.align-left
	float left

.text-center
	text-align center

h1, h2, h3, h4, h5, h6
	font-family: mpb

h1
	font-size 32px
h2
	font-size 28px
h3
	font-size 26px
h4
	font-size 22px
h5
	font-size 18px
h6
	font-size 16px

.container
	max-width 1230px !important
	width 100%
	padding-left 15px
	padding-right 15px

.container-small
	max-width 825px
	width 100%
	margin 0 auto

.default-head
	position relative
	margin-bottom 10px
	&:before
		position absolute
		left 0
		top 0
		content ''
		width 6px
		height 100%
		background: #E04930
	h4
		font-family: mpb
		font-size 50px
		line-height 80px
		color #E04930
		padding-left 30px